@model CRM_Project.Core.Entities.Service
@{
  ViewData["Title"] = "Create";
  Layout = "_Layout2";
}
<h2 class="mt-2">Talep Gönder</h2>
<hr />
<div class="card mt-2 col-md-5">
  <div class="card-header fw-bold">Talep</div>
  <div class="card-body">
    <div>
      <form asp-action="Create" asp-controller="Service">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
          <label asp-for="UpdatedDate" class="control-label"></label>
          <input is-accept-old-day="false" value="@DateTime.Now.ToString("yyyy-MM-dd  HH:mm")" disabled class="form-control" />
        </div>
        <div class="form-group">
          <label asp-for="Request" class="control-label"></label>
          <textarea asp-for="Request" rows="8" class="form-control px-3"></textarea>
          <span asp-validation-for="Request" class="text-danger"></span>
        </div>
        <div class="form-group">
          <input type="hidden" asp-for="CompanyId" class="form-control" value="@ViewBag.CompanyId">
        </div>
        <div class="form-group mt-2">
          <button type="submit" class="btn btn-outline-success float-end"><i class="fa-solid fa-share-from-square fa-beat" style="color: #80b25c;"></i></button>
        </div>
      </form>
    </div>
  </div>
</div>
<div>
  <a href="javascript:history.back()">Geri Dön</a>
</div>

