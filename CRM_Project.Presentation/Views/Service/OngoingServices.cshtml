@model IEnumerable<CRM_Project.Core.Entities.Service>

@{
  ViewData["Title"] = "OngoingServices";
}

<h2 class="mt-2">Devam Eden Hizmetler</h2>
<hr />
<div class="card mb-4">
  <div class="card-header">
    <i class="fas fa-table me-1"></i>
    Servis Tablosu
  </div>
  <div class="card-body">
        <table class="table" id="datatablesSimple">
      <thead>
        <tr>
          <th>
            @Html.DisplayNameFor(model => model.ServiceStatus)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Request)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Company.CompanyName)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.UpdatedDate)
          </th>
          <th> İşlemler </th>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <th>
            @Html.DisplayNameFor(model => model.ServiceStatus)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Request)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Company.CompanyName)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.UpdatedDate)
          </th>
          <th>    </th>
      </tfoot>
      <tbody>
        @foreach (var item in Model)
        {
          <tr>
            <td>
              @Html.DisplayFor(modelItem => item.ServiceStatus)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Request)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Company.CompanyName)
            </td>
            <td>
              @item.UpdatedDate.Date.ToShortDateString()
            </td>
            <td>
              <span class="d-none iid">@item.Id</span>
              <button onclick="pasifYap(@item.Id)" data-toggle="tooltip" title="Servisi Kapat" class="btn btn-sm btn-danger"><i class="fa-solid fa-toggle-off"></i></button>
              <a data-toggle="tooltip" title="Detaylar" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="fa-solid fa-circle-info"></i></a>
              <a data-toggle="tooltip" title="Servis Adımı Ekle" asp-controller="ServiceStep" asp-action="CreateByAdmin" asp-route-id="@item.Id" class="btn btn-sm btn-success"><i class="fa-regular fa-calendar-plus"></i></a>
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>
