@model IEnumerable<CRM_Project.Core.Entities.Company>
@{
  ViewData["Title"] = "Companies";
}
<h2 class="mt-2">Abone Firmalar Listesi</h2>
<hr/>
<div class="card mb-4">
  <div class="card-header">
    <i class="fas fa-table me-1"></i>
    Firma Tablosu
    <span class="float-end"><a data-toggle="tooltip" title="Yeni Firma Ekle" asp-action="Create" class="btn btn-outline-primary">Yeni Firma Ekle</a></span>
  </div>
  <div class="card-body">
    <table class="table" id="datatablesSimple">
      <thead>
        <tr>
          <th>
            @Html.DisplayNameFor(model => model.CompanyName)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Email)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Password)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.UpdatedDate)
          </th>
          <th>
            Düzenle
          </th>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <th>
            @Html.DisplayNameFor(model => model.CompanyName)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Email)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Password)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.UpdatedDate)
          </th>
          <th>
            Düzenle
          </th>
      </tfoot>
      <tbody>
        @foreach (var item in Model)
        {
          <tr>
            <td>
              @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.UpdatedDate.Date)
            </td>
            <td>
              <a data-toggle="tooltip" title="Firmayı Düzenle" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary"><i class="fa-regular fa-pen-to-square" style="color: #7d8587;"></i></a>
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>