@model CRM_Project.Core.ReportModels.StaffReportModel
@{
  ViewData["Title"] = "Staff Reports";
}
<h2 class="mt-2">Servis Detayları</h2>
<hr />
<div class="card mb-4">
  <div class="card-header">
    <span class="fw-bold">"@Model.Staff.FullName"</span> Personelinin Tamamladığı Hizmet Adımları<span class="float-end">
      <a href="javascript:history.back()"><i class="fa-solid fa-arrow-left fa-lg"></i></a>
    </span>
  </div>
  <div class="card-body">
    <table id="datatablesSimple" class="datatable">
      <thead>
        <tr>
          <th>
            Firma
          </th>
          <th>
            Yapılan İş
          </th>
          <th>
            Hizmet Puanı
          </th>
          <th>
            Hizmet Gideri
          </th>
      </thead>
      <tfoot>
        <tr>
          <th>
            Firma
          </th>
          <th>
            Yapılan İş
          </th>
          <th>
            Hizmet Puanı
          </th>
          <th>
            Hizmet Gideri
          </th>
        </tr>
      </tfoot>
      <tbody>
        @foreach (var item in Model.ServiceSteps)
        {
          <tr>
            <td>
              @item.Service.Company.CompanyName
            </td>
            <td>
              @item.Description
            </td>
            <td>
              @item.Point
            </td>
            <td>
              @item.Price
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
  <span id="c1" class="d-none">@Model.Staff.FullName</span>
  <span id="c2" class="d-none"></span>
</div>
