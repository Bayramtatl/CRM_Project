@model CRM_Project.Core.ReportModels.CompanyReportModel
@{
  ViewData["Title"] = "Company Reports";
}
<h2 class="mt-2">Servis Detayları</h2>
<hr />
<div class="card mb-4">
  <div class="card-header">
    <span class="fw-bold">"@Model.Company.CompanyName"</span> Firmasına Verilmiş Hizmetler <span class="float-end">
      <a href="javascript:history.back()"><i class="fa-solid fa-arrow-left fa-lg"></i></a>
    </span>
  </div>
  <div class="card-body">
    <table id="datatablesSimple" class="datatable">
      <thead>
        <tr>
          <th>
            Servis Durumu
          </th>
          <th>
            Servis Talebi
          </th>
          <th>
            Servis Gideri
          </th>
          <th>
            Servis Tarihi
          </th>
      </thead>
      <tfoot>
        <tr>
          <th>
            Servis Durumu
          </th>
          <th>
            Servis Talebi
          </th>
          <th>
            Servis Gideri
          </th>
          <th>
            Servis Tarihi
          </th>
        </tr>
      </tfoot>
      <tbody>
        @foreach (var item in Model.Services)
        {
          <tr>
            <td>
              @item.ServiceStatus
            </td>
            <td>
              @item.Request
            </td>
            <td>
              @item.MoneySpent
            </td>
            <td>
              @item.UpdatedDate.ToShortDateString()
            </td>
          </tr>
        }          
      </tbody>
    </table>
  </div>
  <span id="c1" class="d-none">@Model.AmountSpent</span>
  <span id="c2" class="d-none">@ViewBag.TotalSpent</span>
</div>
<div class="row">
  <div class="col-lg-6">
    <div class="card mb-4">
      <div class="card-header">Hizmetlerin Toplam Detayı <span class="float-end">@Model.Services.Last().LastDate.Date.ToShortDateString()</span></div>
      <div class="card-body">
        <ul class="list-group">
          <li class="list-group-item">Firma Adı : <span>@Model.Company.CompanyName</span></li>
          <li class="list-group-item">Servis Sayısı : <span>@Model.Services.Count</span></li>
          <li class="list-group-item">Toplam Hizmet Gideri : <span>@Model.AmountSpent</span></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="card mb-4">
      <div class="card-header">
        <i class="fas fa-chart-pie me-1"></i>
        @Model.Company.CompanyName <span> Firmasına yapılan giderin toplam gidere oranı</span>
      </div>
      <div class="card-body"><canvas id="myPieChart" width="100%" height="50"></canvas></div>
      <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>
  </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
<script src="~/assets/demo/chart-pie-demo.js"></script>